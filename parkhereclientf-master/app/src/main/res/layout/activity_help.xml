<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help"
    tools:context=".Help">

    <ScrollView
        android:layout_width="337dp"
        android:layout_height="545dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="21dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ph_activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#80ffffff"
                android:text="Step 1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80ffffff"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:text="If you have not added any vehicle yer, NO VEHICLE ADDED is displayed. Then you click Add Vehicles and add any number of vehicles. From that layout you can edit, update or delete any added vehicle as you wish." />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#80ffffff"
                android:text="Step 2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80ffffff"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:text="Then you can select any vehicle from a drop down list of your profile. Next if you select On Booking you can observe the nearest parks according to your location from a map. You can choose any one of them. Next you have to enter a date and destination. Then the available parks of that date will be displlayed. You can select any park from any of them. The payment regards to the booking is informed you." />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#80ffffff"
                android:text="Step 3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80ffffff"
                android:paddingLeft="@dimen/nav_header_vertical_spacing"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:text="You can check out more about us with about us link." />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>